<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogo"
    tools:context=".AppliedJobsDetails"
    android:id="@+id/appliedJobDetials">

    <RelativeLayout
        android:id="@+id/relative_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/header_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/mainapp"
            android:gravity="center"
            android:text="@string/Job_details"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>


    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="663dp"
        app:layout_constraintTop_toBottomOf="@+id/relative_layout_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_appliedjobdetails_job_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@string/Job_details_job_title"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_appliedjobdetails_company_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/user_appliedjobdetails_job_title"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/company_name"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/user_appliedjobdetails_company_location"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/user_appliedjobdetails_company_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/company_location"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/user_appliedjobdetails_jobdetails"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/user_appliedjobdetails_company_location"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/Job_details"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_appliedjobdetails_salary"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/user_appliedjobdetails_jobdetails"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/Salary"
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/user_appliedjobdetails_salaryinnumber"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/user_appliedjobdetails_salary"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="This will be your salary"
                android:textColor="@color/light_black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/user_appliedjobdetails_jobtype"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/user_appliedjobdetails_salaryinnumber"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/job_type"
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/user_appliedjobdetails_jobtype1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/user_appliedjobdetails_jobtype"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Job type requirement (Full-time)."
                android:textColor="@color/light_black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/user_appliedjobdetails_vacancy"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/user_appliedjobdetails_jobtype1"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/vacancy"
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/user_appliedjobdetails_vacancynumber"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/user_appliedjobdetails_vacancy"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Vacancies for this job."
                android:textColor="@color/light_black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/user_appliedjobdetails_qualification"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/user_appliedjobdetails_vacancynumber"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/Qualifications"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_appliedjobdetails_qualificationdetail1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/user_appliedjobdetails_qualification"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Qualification requirement"
                android:textColor="@color/light_black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/user_appliedjobdetails_jobdescription"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/user_appliedjobdetails_qualificationdetail1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/Full_job_discription"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_appliedjobdetails_company_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_appliedjobdetails_jobdescription"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Description"
                android:textColor="@color/light_black"
                android:textSize="17sp" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>