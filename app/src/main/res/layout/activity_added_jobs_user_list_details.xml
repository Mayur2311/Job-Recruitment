<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddedJobs_userListDetails">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mainapp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="Applicant Details"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="663dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#CDE3E3"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userProfilePic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/account"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="User Profile"
                android:layout_below="@id/userProfilePic"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/firstName_addedJob_userList"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/user_name"
                android:drawableLeft="@drawable/name"
                android:drawablePadding="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/first_name"
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/lastName_addedJob_userList"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:drawableLeft="@drawable/name"
                android:drawablePadding="15dp"
                android:layout_below="@id/firstName_addedJob_userList"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/last_name"
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/City__addedJob_userList"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/lastName_addedJob_userList"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/city"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:paddingLeft="10dp"
                android:text="City"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/mobile_no_addedJob_userList"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/City__addedJob_userList"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/mobile"
                android:drawablePadding="15dp"
                android:paddingLeft="10dp"
                android:text="Mobile No"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/mobile_no_addedJob_userList"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:drawablePadding="15dp"
                android:text="About"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/about_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/about"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/experience"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/about_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Experience."
                android:textStyle="bold"
                android:textColor="@color/medium_black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/experience_text1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/experience"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/experience_text2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/experience_text1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/experience_text3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/experience_text2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/Education"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/experience_text3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Education."
                android:textStyle="bold"
                android:textColor="@color/medium_black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/Education_text1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/Education"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/Education_text2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/Education_text1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/Education_text3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/Education_text2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/resume_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/Education_text3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/Resume"
                android:textStyle="bold"
                android:textColor="@color/medium_black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/resume_file"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/resume_title"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/Resume"
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>