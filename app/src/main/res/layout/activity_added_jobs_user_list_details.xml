<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddedJobs_userListDetails">

    <RelativeLayout
        android:id="@+id/relative_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <TextView
            android:id="@+id/header_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/mainapp"
            android:text="@string/user_details"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="663dp"
        app:layout_constraintTop_toBottomOf="@+id/relative_layout_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userProfilePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/account"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="User Profile"
                android:layout_below="@id/userProfilePic"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/firstName_addedJob_userList"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/user_name"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/first_name"
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/lastName_addedJob_userList"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/firstName_addedJob_userList"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/last_name"
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/City__addedJob_userList"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/lastName_addedJob_userList"
                android:text="City"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/mobile_no_addedJob_userList"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:layout_below="@id/City__addedJob_userList"
                android:text="Mobile No"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/mobile_no_addedJob_userList"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:text="About"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/about_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/about"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/experience"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/about_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Experience."
                android:textStyle="bold"
                android:textColor="@color/medium_black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/experience_text1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/experience"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/experience_text2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/experience_text1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/experience_text3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/experience_text2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/Education"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/experience_text3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Education."
                android:textStyle="bold"
                android:textColor="@color/medium_black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/Education_text1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/Education"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/Education_text2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/Education_text1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/Education_text3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/Education_text2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Not available."
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/resume_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/Education_text3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/Resume"
                android:textStyle="bold"
                android:textColor="@color/medium_black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/resume_file"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/resume_title"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="@string/Resume"
                android:textColor="@color/medium_black"
                android:textSize="23sp" />

        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>