            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:text="About"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_about_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about"
                android:background="@drawable/round_corner"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Write something about you"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_about_me"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:text="Experience"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edt_experience1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/experience"
                android:background="@drawable/round_corner"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Experience"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_experience2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_experience1"
                android:background="@drawable/round_corner"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Experience"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_experience3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_experience2"
                android:background="@drawable/round_corner"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Experience"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_experience3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:text="Education"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edt_education1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/education"
                android:background="@drawable/round_corner"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Education"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_education2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_education1"
                android:background="@drawable/round_corner"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Education"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_education3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_education2"
                android:background="@drawable/round_corner"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Education"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_education3"
                android:orientation="horizontal"
                android:background="@drawable/round_corner"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <EditText
                    android:id="@+id/edt_select_PDF"
                    android:layout_width="220dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_corner"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:hint="Select PDF"
                    android:textColor="#0000FF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/submit_PDF"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/editText"
                    android:backgroundTint="@color/mainapp"
                    android:text="Submit"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/linear_layout"
                android:backgroundTint="@color/primaryDarkColor"
                android:text="SAVE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>

