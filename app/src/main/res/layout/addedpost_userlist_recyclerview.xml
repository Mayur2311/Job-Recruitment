<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_margin="9dp"
    android:padding="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_corner">


            <TextView
                android:id="@+id/user_applicantemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="25sp"
                android:textColor="@color/primaryColor"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_applicantemail"
                android:weightSum="2"
                android:gravity="center"
                android:orientation="horizontal"
                >

            <Button
                android:id="@+id/approved_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/approved"
                android:backgroundTint="@color/mainapp"
                android:layout_marginRight="20dp"
                />

                <Button
                    android:id="@+id/disapprove_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/declined"
                    />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>